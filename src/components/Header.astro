---
import SiteLinks from "@/components/SiteLinks.astro";
import presentation from "@/data/presentation";
import { ThemeSwitch } from "astro-color-scheme";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <label class="font-bold">
    Theme:
    <ThemeSwitch strategy="select">
      <select class=" select select-bordered select-accent select-md">
        <option value="system">System</option>
        <option value="dark">Dark</option>
        <option value="light">Light</option>
        <option value="cupcake">Cupcake</option>
        <option value="bumblebee">Bumblebee</option>
        <option value="winter">Winter</option>
      </select>
    </ThemeSwitch>
  </label>        
  

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/wubia-one/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/wubia-one/posts"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/posts",
          }}>Posts</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/wubia-one/cv"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/cv",
          }}>CV</a
        >
      </li>
    
      
    </ul>
  </nav>
</header>
