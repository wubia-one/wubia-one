---
import Header from "@/components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";
import { ThemeSwitch } from "astro-color-scheme";
import SocialLinks from "@/components/SocialLinks.astro";
import Link from "@/components/shared/Link.astro";

import presentation from "@/data/presentation";

import "@fontsource/open-sans";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="black" data-theme="black">
  <SEOTags {...headTags} />

  <body
    class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-base-100 px-10 py-8 text-sm base-content md:gap-20 md:py-16"
  >
    <Header />
    <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
    <slot />
    <style is:global>
      html {
        font-family: "Open Sans";
      }
    </style>
  </body>
  <footer is:global>
    <div>
      <label class="font-bold">
        Theme:
        <ThemeSwitch strategy="select">
          <select class=" select select-bordered select-accent select-md">
            <option value="system">System</option>
            <option value="dark">Dark</option>
            <option value="black">Black</option>
            <option value="light">Light</option>
          </select>
        </ThemeSwitch>
      </label>        
      </div>
      <br/>
      <br/> 

      <div class="flex flex-col gap-8">
        <header class="flex w-full flex-row justify-between gap-2">
          <h3 class="text-lg base-content">Get in touch</h3>
        </header>
        <p>
          Email me at <Link
            href={`mailto:${presentation.mail}`}
            label={presentation.mail}
          /> or follow me via my social links.
        </p>
  
        <SocialLinks />
      </div>
  </footer>
</html>
